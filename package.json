{
  "name": "osmi-todo-api",
  "version": "1.0.0",
  "description": "osmi-todo-api",
  "author": "christian-g√∂tze",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon --env=dev",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js",
    "webpack-prod": "webpack --config webpack.config.prod.js",
    "docker-run-stack": "docker build -t todo-api -f devops/Dockerfile . && docker stack deploy -c ./devops/prod-stack.yml todo-api-stack",
    "docker-run-stack:dev": "docker stack deploy -c ./devops/dev-stack.yml todo-api-stack",
    "docker-run-stack:latest": "yarn git pull && docker-run-stack",
    "docker-stop-stack": "docker stack rm todo-api-stack"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.1",
    "@nestjs/core": "^5.0.1",
    "@nestjs/microservices": "^5.0.1",
    "@nestjs/testing": "^5.0.1",
    "@nestjs/websockets": "^5.0.1",
    "dotenv": "^6.0.0",
    "fastify-formbody": "^2.0.0",
    "joi": "^13.3.0",
    "mongoose": "^5.1.5",
    "neo4j-driver": "^1.6.1",
    "node-uuid": "^1.4.8",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.0",
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "@nestjs/mongoose": "^5.0.0",
    "@types/express": "^4.11.1",
    "@types/jest": "^21.1.8",
    "@types/joi": "^13.0.8",
    "@types/mongoose": "^5.0.15",
    "@types/node": "^10.3.0",
    "@types/supertest": "^2.0.4",
    "jest": "^21.2.1",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.1.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
